  keywords = {Accessibility,Emerging transportation technologies,Environment,Equity assessment framework,Safety,Traffic emissions},
  file = {C\:\\Users\\user\\Zotero\\storage\\GTPU27D7\\Guo et al. - 2020 - A systematic overview of transportation equity in .pdf;C\:\\Users\\user\\Zotero\\storage\\9NW7T44P\\S2590198220300026.html}
