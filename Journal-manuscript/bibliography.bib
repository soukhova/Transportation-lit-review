@article{rosas-satizabalCyclingDiversityAccessibility2020,
  title = {Cycling Diversity, Accessibility, and Equality: {{An}} Analysis of Cycling Commuting in {{Bogota}}},
  author = {Rosas-Satizabal, D and Guzman, LA and Oviedo, D},
