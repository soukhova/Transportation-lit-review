@article{arellanaWalkThisWay2021,
  title = {Walk This Way: {{Pedestrian}} Accessibility and Equity in {{Barranquilla}} and {{Soledad}}, {{Colombia}}},
  author = {Arellana, J and Alvarez, V and Oviedo, D and Guzman, LA},
