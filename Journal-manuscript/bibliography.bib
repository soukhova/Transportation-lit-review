@article{sohrabiBurdenDiseaseAssessment2020,
  title = {Burden of {{Disease Assessment}} of {{Ambient Air Pollution}} and {{Premature Mortality}} in {{Urban Areas}}: {{The Role}} of {{Socioeconomic Status}} and {{Transportation}}},
