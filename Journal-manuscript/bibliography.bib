@article{bartzokas-tsiomprasMeasuringRapidTransit2019,
  title = {Measuring Rapid Transit Accessibility and Equity in Migrant Communities across 17 {{European}} Cities},
  author = {Bartzokas-Tsiompras, Alexandros and Photis, Yorgos N},
  date = {2019},
  journaltitle = {International Journal of Transport Development and Integration},
