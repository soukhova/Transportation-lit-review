@article{milanLiftingPeripheralFortunes2017,
  title = {Lifting Peripheral Fortunes: {{Upgrading}} Transit Improves Spatial, Income and Gender Equity in {{Medellin}}},
  author = {Milan, BF and Creutzig, F},
  date = {2017},
  journaltitle = {CITIES},
