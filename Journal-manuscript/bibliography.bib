@article{wangImpactsBuiltEnvironment2017,
  title = {Impacts of the Built Environment on Activity-Travel Behavior: {{Are}} There Differences between Public and Private Housing Residents in {{Hong Kong}}?},
  author = {Wang, DG and Cao, XY},
  date = {2017},
  journaltitle = {Transportation Research Part A: Policy and Practice},
  shortjournal = {Transportation Research Part A: Policy and Practice},
  volume = {103},
  pages = {25--35},
  doi = {10.1016/j.tra.2017.05.018},
  abstract = {The built environment impacts individuals' participation in daily activities and associated travel (or activity-travel behavior). However, it is not well understood how these impacts differ between different socioeconomic groups (e.g. economically advantaged and disadvantaged people) and how neighborhood planning affects the difference. Using data of public housing and private housing residents in Hong Kong in 2010, this study applies the propensity score matching approach to identify differences in activity-travel behavior under different built environment settings for private and public housing residents respectively. We find that density, accessibility and self-containment collectively affect private housing residents' auto ownership, travel time, trip frequency, and entertainment time spent at home, but have few influences on public housing dwellers. The different built environment effects are partly because the planning standards and guidelines in Hong Kong stipulate the provision of daily facilities and services such as grocery shops/supermarket, primary school and transit in proximity to public housing development. Thus, although economically disadvantaged people have limited transportation resources, neighborhood planning can adequately meet their daily needs even if they are placed in suburban areas. (C) 2017 Elsevier Ltd. All rights reserved.}
}

@inproceedings{wangMethodEvaluateEquity2014,
  title = {A {{Method}} to {{Evaluate Equity}} of {{Bus Spatial Availability Based}} on the {{Demand-Supply-Inconformity Indicator}}},
  author = {Wang, Yuji and Wang, Wei and Chen, Xuewu and {American Society of Civil Engineers}},
